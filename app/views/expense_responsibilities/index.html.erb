<p id="notice"><%= notice %></p>

<h1>Listing Expense Responsibilities</h1>

<table>
  <thead>
    <tr>
      <th>Expense</th>
      <th>User</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expense_responsibilities.each do |expense_responsibility| %>
      <tr>
        <td><%= expense_responsibility.expense %></td>
        <td><%= expense_responsibility.user %></td>
        <td><%= expense_responsibility.amount %></td>
        <td><%= link_to 'Show', expense_responsibility %></td>
        <td><%= link_to 'Edit', edit_expense_responsibility_path(expense_responsibility) %></td>
        <td><%= link_to 'Destroy', expense_responsibility, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

