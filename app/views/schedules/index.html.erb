<p id="notice"><%= notice %></p>

<h1>Listing Schedules</h1>

<table>
  <thead>
    <tr>
      <th>Week</th>
      <th>User</th>
      <th>Arrival date</th>
      <th>Departure date</th>
      <th>Arrival time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.week %></td>
        <td><%= schedule.user %></td>
        <td><%= schedule.arrival_date %></td>
        <td><%= schedule.departure_date %></td>
        <td><%= schedule.arrival_time %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

