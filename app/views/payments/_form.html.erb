<%= simple_form_for(@payment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :date_completed %>
    <%= f.input :amount %>
    <%= f.input :platform %>
    <%= f.input :actor_id %>
    <%= f.input :target_id %>
    <%= f.input :reproter_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
