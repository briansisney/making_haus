<%= simple_form_for(@payment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :date_completed %>
    <%= f.input :amount %>
    <%= f.input :platform %>
    <%= f.association :actor %>
    <%= f.association :target %>
    <%= f.association :reporter %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
